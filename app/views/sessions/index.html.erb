<div class="container">

  <% if !current_user %>

 	<h1 class="text-center">Authorization of users</h1>
    <div class="col-md-4 col-md-offset-4 text-center">
      <%= form_for @user, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
        <%= f.email_field :email, class: "form-control", placeholder: "Email address" %></br>
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %></br>
        <%= f.submit "Sign in", class: "btn btn-success btn-md" %>
        <%= link_to 'Sign in Twitter', '/auth/twitter', class: "btn btn-success btn-md" %>
        <%= link_to 'Register', 'sessions/new', class: "btn btn-primary btn-md" %>
      <% end %>
    </div>

  <% else %>

    <div class="col-md-4 col-md-offset-4 text-center">
      <h2>Hello <%= current_user.name %></h2>
      <div class="col-md-12">
        <%= image_tag(current_user.profile_image, alt: 'Image') if current_user.profile_image? %>
        </br> </br>
      </div>
      <div class="col-md-12">
        <%= link_to 'Exit', 'sessions/destroy', class: "btn btn-primary btn-md" %>
      </div>
    </div>

  <% end %>

</div>
    